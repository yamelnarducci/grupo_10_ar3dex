<div class="col-12 col-sm-6 col-lg-3 ">
    <section class="product-box ">
      <a href="/productos/detalle/<%= product.id %>">
        <figure class="product-box_image">
          <img src="/images/products/<%= product.mainImage %>" alt="imagen de producto">
        </figure>
        <article class="product-box_data ">
          <div class="priceanddiscount">
            <h2>$<%= toThousand ((product.price - (product.price * product.discount) / 100).toFixed(0)) %></h2>
          <% if (product.discount) { %>
            <span><%= product.discount %> % OFF</span>
          <% } %>
          </div>
          
          
          <p><%= product.name %></p>
        </article>
      </a>
    </section>
  </div>